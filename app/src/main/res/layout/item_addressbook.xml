<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_addressbook_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_15"
        android:text="A"
        android:textColor="@color/color_black"
        android:textSize="@dimen/s_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d_8">

        <ImageView
            android:id="@+id/img_addressbook_userphoto"
            android:layout_width="@dimen/d_48"
            android:layout_height="@dimen/d_48"
            android:src="@mipmap/ico_userhand" />

        <TextView
            android:id="@+id/txt_addressbook_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="王大锤"
            android:textSize="@dimen/s_18" />
    </LinearLayout>


</LinearLayout>